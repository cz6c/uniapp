.login {
  position: relative;
  height: 768px;
  width: 375px;
}
.login form {
  position: absolute;
  top: 20%;
  height: 300px;
  width: 100%;
}
.login form .uni-form-item input {
  border: 1px solid #000000;
  height: 40px;
  width: 80%;
  margin: 20px auto;
}
.login form .register {
  margin: 0 36px 20px;
  color: #d61f07;
}
.login form .divider {
  width: 80%;
  margin: 30px auto;
  color: #999;
  text-align: center;
}
.login .wx {
  position: absolute;
  top: 60%;
  left: 50%;
  margin-left: -25px;
  height: 50px;
  width: 50px;
  background-color: #007AFF;
}

